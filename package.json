    "npm-run-all2": "8.0.4",
    "react": "^19.1.0",
    "rimraf": "6.0.1",
    "ts-jest": "^29.4.0",
    "tslib": "2.8.1",
    "typedoc": "0.28.7",
    "typedoc-plugin-markdown": "4.7.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,js}": "npm test"
  }
