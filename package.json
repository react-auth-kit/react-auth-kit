{
  "name": "react-auth-kit",
  "version": "2.12.7",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "npx lerna run test",
    "test:docs": "markdownlint './docs/**/*.md' --ignore node_modules -c .markdownlint.json"
  },
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": {
    "name": "Arkadip Bhattacharya",
    "email": "in2arkadipb13@gmail.com",
    "url": "https://www.arkadip.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-auth-kit/react-auth-kit"
  },
  "bugs": {
    "url": "https://github.com/react-auth-kit/react-auth-kit/issues",
    "email": "hi@arkadip.dev"
  },
  "homepage": "https://authkit.arkadip.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/react-auth-kit"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "husky": "8.0.3",
    "lerna": "^7.3.0",
    "lint-staged": "14.0.1",
    "markdownlint-cli": "0.37.0",
    "tslib": "2.6.2",
    "typedoc": "0.25.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,js}": "eslint --cache --fix"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
