{
  "name": "react-auth-kit",
  "version": "2.12.7",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "rollup -cw",
    "build": "run-s build:*",
    "build:clean": "rimraf ./dist",
    "build:dir": "mkdirp ./dist",
    "build:build": "rollup -c",
    "prepare": "run-s build && husky install",
    "preversion": "run-s test",
    "test": "run-s test:*",
    "test:build": "run-s build",
    "test:unit": "jest",
    "test:lint": "eslint src/**/*.ts src/**/*.tsx --fix && markdownlint './docs/**/*.md' --ignore node_modules -c .markdownlint.json",
    "test:unit:watch": "jest --watch"
  },
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": {
    "name": "Arkadip Bhattacharya",
    "email": "in2arkadipb13@gmail.com",
    "url": "https://www.arkadip.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-auth-kit/react-auth-kit"
  },
  "bugs": {
    "url": "https://github.com/react-auth-kit/react-auth-kit/issues",
    "email": "hi@arkadip.dev"
  },
  "homepage": "https://authkit.arkadip.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/react-auth-kit"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@rollup/plugin-node-resolve": "15.2.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.5",
    "@types/js-cookie": "3.0.4",
    "@types/node": "18.18.0",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "eslint": "8.50.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "27.4.0",
    "eslint-plugin-react": "7.33.2",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.4.3",
    "lerna": "^7.3.0",
    "lint-staged": "14.0.1",
    "markdownlint-cli": "0.37.0",
    "mkdirp": "3.0.1",
    "npm-run-all": "4.1.5",
    "react-dom": "18.2.0",
    "rimraf": "5.0.5",
    "rollup": "3.29.3",
    "rollup-plugin-filesize": "10.0.0",
    "rollup-plugin-license": "3.1.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-typescript2": "0.35.0",
    "ts-jest": "29.1.1",
    "tslib": "2.6.2",
    "typedoc": "0.25.1",
    "typescript": "5.2.2",
    "utility-types": "3.10.0"
  },
  "dependencies": {
    "js-cookie": "^3.0.1",
    "jwt-decode": "^3.1.2",
    "react": ">=16.8.0 || ^17.x || ^18.x",
    "react-router-dom": "^6.2.0"
  },
  "peerDependencies": {
    "js-cookie": "^3.0.1",
    "jwt-decode": "^3.1.2",
    "react": ">=16.8.0 || ^17.x || ^18.x",
    "react-dom": ">=16.8.0 || ^17.x || ^18.x",
    "react-router-dom": "^6.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,js}": "eslint --cache --fix"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
