  "dependencies": {
    "js-cookie": "^3.0.1",
    "jwt-decode": "^3.1.2",
    "react": ">=16.8.0 || ^17.x || ^18.x",
    "react-router-dom": "^6.2.0"
  },
  "peerDependencies": {
    "js-cookie": "^3.0.1",
    "jwt-decode": "^3.1.2",
    "react": ">=16.8.0 || ^17.x || ^18.x",
