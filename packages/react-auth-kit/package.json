{
  "name": "react-auth-kit",
  "version": "3.1.3",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": "Arkadip Bhattacharya <hi@arkadip.dev>",
  "homepage": "https://authkit.arkadip.dev",
  "license": "MIT",
  "source": "src/index.tsx",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "directories": {
    "src": "src",
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "hooks",
    "utils",
    "dist",
    "*.js",
    "*.d.ts"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./AuthContext": "./dist/AuthContext.js",
    "./AuthProvider": "./dist/AuthProvider.js",
    "./error": "./dist/error/index.js",
    "./error/*": "./dist/error/*.js",
    "./hooks/*": "./dist/hooks/*.js",
    "./refresh/*": "./dist/refresh/*.js",
    "./route/*": "./dist/route/*.js",
    "./storage/*": "./dist/storage/*.js",
    "./store/*": "./dist/store/*.js",
    "./token/*": "./dist/token/*.js",
    "./utils/*": "./dist/utils/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-auth-kit/react-auth-kit.git"
  },
  "scripts": {
    "build": "rimraf ./dist && mkdirp ./dist && tsc --project tsconfig.json && babel src --out-dir ./dist --extensions \".tsx,.ts,.js,.jsx\"",
    "test": "jest",
    "lint": "eslint src",
    "test:watch": "jest --watch"
  },
  "bugs": {
    "url": "https://github.com/react-auth-kit/react-auth-kit/issues"
  },
  "devDependencies": {
    "@testing-library/react": "16.0.1",
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "29.5.14",
    "@types/js-cookie": "3.0.6",
    "@types/node": "22.15.29",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.4.3",
    "next": "^15.0.0",
    "ts-jest": "29.4.0"
  },
  "dependencies": {
    "deep-equal": "^2.2.3",
    "js-cookie": "^3.0.1",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.x || ^18.x || ^19.x",
    "react-dom": ">=16.8.0 || ^17.x || ^18.x || ^19.x"
  },
  "gitHead": "8326f5a8a331e0eacc59bbc4aab7da0671b86a84"
}
