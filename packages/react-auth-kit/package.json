{
  "name": "react-auth-kit",
  "version": "2.12.7",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": "Arkadip Bhattacharya <in2arkadipb13@gmail.com>",
  "homepage": "https://authkit.arkadip.dev",
  "license": "MIT",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-auth-kit/react-auth-kit.git"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rimraf ./dist",
    "build:dir": "mkdirp ./dist",
    "build:build": "rollup -c",
    "preversion": "run-s test",
    "test": "run-s test:*",
    "test:build": "run-s build",
    "test:unit": "jest",
    "test:lint": "eslint src/**/*.ts src/**/*.tsx --fix",
    "test:unit:watch": "jest --watch"
  },
  "bugs": {
    "url": "https://github.com/react-auth-kit/react-auth-kit/issues"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "15.2.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/jest": "29.5.5",
    "@types/js-cookie": "3.0.4",
    "@types/node": "18.18.0",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "@types/react-router-dom": "5.3.3",
    "@testing-library/react": "14.0.0",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "eslint": "8.50.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "27.4.0",
    "eslint-plugin-react": "7.33.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.4.3",
    "mkdirp": "3.0.1",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "rollup": "3.29.3",
    "rollup-plugin-filesize": "10.0.0",
    "rollup-plugin-license": "3.1.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-typescript2": "0.35.0",
    "ts-jest": "29.1.1"
